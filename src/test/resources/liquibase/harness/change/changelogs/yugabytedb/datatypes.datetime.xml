            <column name="timestamp0" type="timestamp (0)"/>
            <column name="timestampe0wtz" type="timestamp (0) with time zone"/>
            <column name="timestamp1" type="timestamp (1)"/>
            <column name="timestamp1wtz" type="timestamp (1) with time zone"/>
